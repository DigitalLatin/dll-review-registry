<div class="container">
  <h1>DLL Reviews Page</h1>
  <h2>View Existing Reviews</h2>
  <table class="table">
    <% @reviews.each  do |review| %>
    <% id = review["@id"].to_s.split("http://digitallatin.org/reviews/").last() %>
    <tr>
      <td><a href="/reviews/<%= id %>.html"><%= id %></a></td>
      <td><a href="/reviews/<%= id %>.json">JSON</a></td>

      <td><%= review["review-metadata"]["date"] %></td>
      <td><%= review["review-metadata"]["review-society"] %></td>
    </tr>
    <% end %>
  </table>
  <div>
    <p><a href="/reviews/create">Create a New Review</a></p>
  </div>
</div>
